<div class="snippet-new-wrapper">
  <div class="back-btn">
    <a href="/users/<%= current_user.id %>"><button class="btn-back">Back To Your Profile</button></a>
  </div>

  <div class="snippet-new-form">
    <%= form_tag snippet_path , method: 'patch' do %>

      <div class="snippet-name form-group">
        <input id="name" class="" name="name" type="text" value="<%= @snippet.name %>" placeholder="Snippet Name" >
        <p class="danger"><%= @errors[:name] %></p>
      </div>

      <div class="snippet-description form-group">
        <textarea id="description" class="" type="text" name="description" placeholder="Description" rows="1" cols="60"><%= @snippet.description %></textarea>
        <p class="danger"><%= @errors[:description] %></p>
      </div>

      <div class="snippet-language">
        <span class="fancyArrow"></span>
        <select id="language" class="" name="language" value="<%= @snippet.language %>">
          <option value="javascript">JavaScript</option>
          <option value="ruby">Ruby</option>
          <option value="other">Other</option>
        </select>
        <p class="danger"><%= @errors[:language] %></p>
      </div>

      <div class="snippet-body form-group">
        <textarea id="snippet-body" class="" type="text" name="body" rows="8" cols="60" placeholder="Snippet Code"><%= @snippet.body %></textarea>
        <p class="danger"><%= @errors[:body] %></p>
      </div>

      <div class="btns">
        <div class="snippet-btn">
          <button class="btn-snippet">Update</button>
        </div>

    <% end %>

      <div class="snippet-delete-btn">
        <%= form_tag snippet_path , method: 'delete' do %>

          <button class="btn-snippet">Delete</button>
        <% end %>

      </div>
    </div>
  </div>
</div>
