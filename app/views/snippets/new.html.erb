<%= form_tag '/snippets' , method: 'post' do %>

  <input id="name" name="name" type="text" placeholder="Snippet Name" >

  <textarea id="description" name="description" placeholder="Description" rows="8" cols="40"></textarea>

  <select id="language" name="language">
    <option value="javascript">JavaScript</option>
  </select>

  <textarea id="snippet-body" name="body" rows="40" cols="40" placeholder="Snippet Code"></textarea>

  <button >Submit</button>

<% end %>
