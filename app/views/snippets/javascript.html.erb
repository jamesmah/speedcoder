
  <div class="left-side">
    <h3>JavaScript Snippets</h3>
    <div class="div-snippets-list">
      <table class="table table-striped">
        <tr>
          <th class="column-title">Name</th>
          <th class="column-title">Description</th>
        </tr>
        <% @snippets_pop.each do |js| %>
          <tr>
            <td><%= link_to( js.name, snippet_path(js)) %></td>
            <td><%= truncate(js.description, length: 100) %></td>
          </tr>
        <% end %>
        <% @snippets_JS.each do |js| %>
          <% if !@snippets_pop.include? js%>
            <tr>
              <td><%= link_to( js.name, snippet_path(js)) %></td>
              <td><%= truncate(js.description, length: 100) %></td>
            </tr>
          <% end %>
        <% end %>
      </table>
    </div>
  </div>

  <div class="right-side">
    <div class="div-language-score-board">
      <h3>Score Board</h3>
      <table class="table table-striped">
        <tr>
          <th>#</th>
          <th> Player </th>
          <th> Score </th>
        </tr>
        <% if @attempts_JS.empty? %>
        <tr>
          <td>Pos</td>
          <td> No scores </td>
          <td> --------- </td>
        </tr>
        <% else %>
          <% @position = 1 %>
          <% @attempts_JS.each do |attempt| %>
          <tr>
            <td><%= @position %></td>
            <td><%= attempt.user.username %></td>
            <td><%= attempt.score %></td>
          </tr>
          <% @position = @position + 1 %>
          <% end %>
        <% end %>
      </table>
    </div>
  </div>
